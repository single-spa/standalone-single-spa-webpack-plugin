{
  "name": "standalone-single-spa-webpack-plugin",
  "version": "5.0.0",
  "description": "A webpack plugin to run single-spa microfrontends as standalone",
  "type": "module",
  "packageManager": "pnpm@10.7.0",
  "exports": {
    ".": {
      "default": "./lib/standalone-single-spa.js",
      "types": "./lib/standalone-single-spa.d.ts"
    }
  },
  "scripts": {
    "test": "jest",
    "build": "tsc",
    "watch": "tsc --watch",
    "prepublishOnly": "pnpm run build",
    "prepare": "husky",
    "check-format": "prettier --check .",
    "format": "prettier --write ."
  },
  "types": "types/standalone-single-spa.d.ts",
  "files": [
    "lib"
  ],
  "devDependencies": {
    "@babel/preset-typescript": "^7.27.0",
    "@types/jest": "^29.5.14",
    "@types/node": "^22.13.14",
    "html-webpack-plugin": "^5.6.3",
    "husky": "^9.1.7",
    "jest": "^29.3.1",
    "jest-serializer-html": "^7.1.0",
    "prettier": "^3.5.3",
    "pretty-quick": "^4.1.1",
    "typescript": "^5.8.2",
    "webpack": "5.98.0"
  },
  "peerDependencies": {
    "html-webpack-plugin": "*",
    "webpack": "*"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/single-spa/standalone-single-spa-webpack-plugin.git"
  },
  "keywords": [
    "webpack",
    "single-spa",
    "standalone"
  ],
  "author": "Jolyn Denning",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/single-spa/standalone-single-spa-webpack-plugin/issues"
  },
  "homepage": "https://github.com/single-spa/standalone-single-spa-webpack-plugin#readme",
  "engines": {
    "node": ">= 8.3.0"
  },
  "dependencies": {
    "single-spa": "link:../single-spa"
  },
  "pnpm": {
    "overrides": {
      "eslint-config-node-important-stuff": "link:../eslint-config-node-important-stuff"
    }
  }
}
